{
  "kind": "collectionType",
  "collectionName": "units",
  "info": {
    "singularName": "unit",
    "pluralName": "units",
    "displayName": "Unit",
    "description": "A unit within a subject"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "richtext"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "subject": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subject.subject",
      "inversedBy": "units"
    },
    "chapters": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::chapter.chapter",
      "mappedBy": "unit"
    }
  }
}
