{
  "kind": "collectionType",
  "collectionName": "chapters",
  "info": {
    "singularName": "chapter",
    "pluralName": "chapters",
    "displayName": "Chapter",
    "description": "A chapter within a unit"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "overview": {
      "type": "richtext"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "unit": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit.unit",
      "inversedBy": "chapters"
    },
    "modules": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::module.module",
      "mappedBy": "chapter"
    }
  }
}
