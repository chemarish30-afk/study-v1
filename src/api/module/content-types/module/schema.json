{
  "kind": "collectionType",
  "collectionName": "modules",
  "info": {
    "singularName": "module",
    "pluralName": "modules",
    "displayName": "Module",
    "description": "A module within a chapter"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "notes": {
      "type": "richtext"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "chapter": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::chapter.chapter",
      "inversedBy": "modules"
    },
    "contents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::content.content",
      "mappedBy": "module"
    }
  }
}
